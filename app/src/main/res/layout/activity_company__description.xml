<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Company_Description">
    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
    android:id="@+id/swipeRefreshLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<ScrollView
    android:id="@+id/Scroll"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/Company_logo"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:src="@drawable/logo"
            android:paddingBottom="5dp"/>

        <TextView
            android:id="@+id/company_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:textSize="30dp"
            android:layout_marginTop="5dp"
            android:textStyle="bold"
            android:textColor="#057a1e"
            android:layout_gravity="start"
            />

            <Button
                android:id="@+id/apply"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:padding="5dp"
                android:layout_marginTop="-25dp"
                android:layout_marginRight="15dp"
                android:background="#000"
                android:text="APPLY FOR JOB"
                android:textColor="#fff"
                android:layout_gravity="right"
                />

        <TextView
            android:id="@+id/Company_desc_head"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:text="Description"
            android:textColor="#000"
            android:textSize="16dp"
            android:textStyle="bold"
            />

        <TextView
            android:id="@+id/Company_desc_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="15dp"
            android:paddingEnd="15dp"
            android:paddingRight="15dp"
            android:paddingBottom="15dp"
            android:textColor="#000"
            />

        <TextView
            android:id="@+id/Company_res_head"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:text="Responsibility"
            android:textSize="16dp"
            android:textStyle="bold"
            android:textColor="#000"
            />

        <TextView
            android:id="@+id/Company_res_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="15dp"
            android:paddingEnd="15dp"
            android:paddingRight="15dp"
            android:textColor="#000"
            android:paddingBottom="15dp" />

        <TextView
            android:id="@+id/Company_branch_head"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:text="Eligible Branch"
            android:textSize="16dp"
            android:textStyle="bold"
            android:textColor="#000"
            />

        <TextView
            android:id="@+id/Company_branch_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="15dp"
            android:paddingEnd="15dp"
            android:paddingRight="15dp"
            android:textColor="#000"
            android:paddingBottom="15dp" />

        <TextView
            android:id="@+id/Company_criteria_head"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:text="Eligibility Criteria"
            android:textSize="16dp"
            android:textStyle="bold"
            android:textColor="#000"
            />

        <TextView
            android:id="@+id/Company_critera_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="15dp"
            android:paddingEnd="15dp"
            android:paddingRight="15dp"
            android:textColor="#000"
            android:paddingBottom="15dp" />

        <TextView
            android:id="@+id/Company_skills_head"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:textColor="#000"
            android:text="Required Skills"
            android:textSize="16dp"
            android:textStyle="bold"
            />

        <TextView
            android:id="@+id/Company_skills_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="15dp"
            android:textColor="#000"
            android:paddingEnd="15dp"
            android:paddingRight="15dp"
            android:paddingBottom="15dp" />

        <TextView
            android:id="@+id/Company_ctc_head"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:text="CTC"
            android:textColor="#000"
            android:textSize="16dp"
            android:textStyle="bold"
            />


        <TextView
            android:id="@+id/Company_ctc_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="15dp"
            android:paddingEnd="15dp"
            android:textColor="#000"
            android:paddingRight="15dp"
            android:paddingBottom="15dp" />

        <TextView
            android:id="@+id/Company_start_head"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:text="Apply From"
            android:textSize="16dp"
            android:textColor="#000"
            android:textStyle="bold"
            />

        <TextView
            android:id="@+id/Company_start_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="15dp"
            android:paddingEnd="15dp"
            android:textColor="#000"
            android:paddingRight="15dp"
            android:paddingBottom="15dp" />

        <TextView
            android:id="@+id/Company_end_head"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:textColor="#000"
            android:text="Apply Till"
            android:textSize="16dp"
            android:textStyle="bold"
            />

        <TextView
            android:id="@+id/Company_end_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="15dp"
            android:paddingEnd="15dp"
            android:textColor="#000"
            android:paddingRight="15dp"
            android:paddingBottom="15dp" />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
            android:id="@+id/Comment_head"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:layout_marginStart="15dp"
                android:layout_marginTop="15dp"
            android:text="Comments"
            android:textColor="#000"
            android:textSize="25dp"
            android:textStyle="bold"

            />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="17dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Choose Comment type : "
                    android:textSize="10sp"
                    android:textColor="#000"></TextView>

        <androidx.appcompat.widget.AppCompatSpinner
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:id="@+id/showSpinner">
        </androidx.appcompat.widget.AppCompatSpinner>
            </LinearLayout>
        </LinearLayout>

<!--<androidx.swiperefreshlayout.widget.SwipeRefreshLayout
    android:id="@+id/swipeRefreshLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">-->

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/listGeneral"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:nestedScrollingEnabled="false"
        />
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/listQa"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:nestedScrollingEnabled="false"
            />
<!--</androidx.swiperefreshlayout.widget.SwipeRefreshLayout>-->

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="Choose Comment type : "
                android:textColor="#000"
                android:textSize="15sp"></TextView>


        <androidx.appcompat.widget.AppCompatSpinner
            android:layout_margin="10dp"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:id="@+id/spinner">
        </androidx.appcompat.widget.AppCompatSpinner>
        </LinearLayout>

        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Comment">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/Feedback"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:inputType="textPersonName|textMultiLine"
                android:lines="10"
                android:minLines="5"
                android:maxLines="15" />

        </com.google.android.material.textfield.TextInputLayout>
        <Button
            android:id="@+id/post"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:padding="20dp"
            android:background="#000"
            android:text="ADD YOUR FEEDBACK"
            android:gravity="center_vertical|right"
            android:textColor="#fff"
            />

    </LinearLayout>
</ScrollView>
    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>
</RelativeLayout>
